{
    "name": "@labeg/code-style",
    "version": "6.2.0",
    "author": "Eugene Labutin",
    "license": "MIT",
    "homepage": "https://github.com/LabEG/code-style#readme",
    "description": "Code styles rules for difference linters, for create best code quality",
    "type": "module",
    "main": "eslint.config.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LabEG/code-style.git"
    },
    "bugs": {
        "url": "https://github.com/LabEG/code-style/issues"
    },
    "lint-staged": {
        "./tests/**/*.(ts|tsx|js|jsx)": [
            "eslint tests/**"
        ]
    },
    "scripts": {
        "test": "eslint tests/**",
        "release": "cliff-jumper --name '@labeg/code-style' --package-path '.' --no-skip-changelog --no-skip-tag",
        "prepare": "husky install"
    },
    "peerDependencies": {
        "react": ">=15.0.0",
        "typescript": ">=5.0.0"
    },
    "dependencies": {
        "@eslint/js": "^9.24.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@stylistic/eslint-plugin-migrate": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "eslint": "^9.24.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "globals": "^16.0.0",
        "typescript-eslint": "^8.29.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@favware/cliff-jumper": "^6.0.0",
        "@types/react": "^19.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "react": "^19.1.0",
        "typescript": "^5.8.3"
    },
    "keywords": [
        "code style",
        "linters",
        "eslint"
    ]
}
