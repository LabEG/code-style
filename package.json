{
    "name": "@labeg/code-style",
    "version": "5.3.3",
    "author": "Eugene Labutin",
    "license": "MIT",
    "homepage": "https://github.com/LabEG/code-style#readme",
    "description": "Code styles rules for difference linters, for create best code quality",
    "type": "module",
    "main": "eslint.config.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LabEG/code-style.git"
    },
    "bugs": {
        "url": "https://github.com/LabEG/code-style/issues"
    },
    "lint-staged": {
        "./tests/**/*.(ts|tsx|js|jsx)": [
            "eslint tests/**"
        ]
    },
    "scripts": {
        "test": "eslint tests/**",
        "release": "cliff-jumper --name '@labeg/code-style' --package-path '.' --no-skip-changelog --no-skip-tag",
        "prepare": "husky install"
    },
    "peerDependencies": {
        "react": ">=15.0.0",
        "typescript": ">=5.0.0"
    },
    "dependencies": {
        "@eslint/js": "^9.17.0",
        "@stylistic/eslint-plugin": "^2.12.1",
        "@stylistic/eslint-plugin-migrate": "^2.12.1",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^9.17.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "typescript-eslint": "^8.18.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@favware/cliff-jumper": "^5.0.0",
        "@types/react": "^19.0.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "react": "^19.0.0",
        "typescript": "^5.7.2"
    },
    "keywords": [
        "code style",
        "linters",
        "eslint"
    ]
}
