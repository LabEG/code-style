{
    "name": "@labeg/code-style",
    "version": "6.10.19",
    "author": "Eugene Labutin",
    "license": "MIT",
    "homepage": "https://github.com/LabEG/code-style#readme",
    "description": "Code styles rules for difference linters, for create best code quality",
    "type": "module",
    "main": "eslint.config.js",
    "exports": {
        ".": {
            "import": "./eslint.config.js",
            "require": "./eslint.config.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "eslint.config.js",
        ".editorconfig",
        ".remarkrc",
        ".prettierrc",
        "LICENSE",
        "README.md",
        "SECURITY.md",
        "CHANGELOG.md"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LabEG/code-style.git"
    },
    "bugs": {
        "url": "https://github.com/LabEG/code-style/issues"
    },
    "lint-staged": {
        "./tests/**/*.(ts|tsx|js|jsx)": [
            "eslint tests/**"
        ]
    },
    "scripts": {
        "test": "eslint tests/**",
        "release": "cliff-jumper --name '@labeg/code-style' --package-path '.' --no-skip-changelog --no-skip-tag",
        "prepare": "husky"
    },
    "peerDependencies": {
        "react": ">=15.0.0",
        "typescript": ">=5.0.0"
    },
    "dependencies": {
        "@eslint/js": "^9.39.1",
        "@stylistic/eslint-plugin": "^5.5.0",
        "@stylistic/eslint-plugin-migrate": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "eslint": "^9.39.1",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^16.5.0",
        "typescript-eslint": "^8.46.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@favware/cliff-jumper": "^6.0.0",
        "@types/react": "^19.2.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "react": "^19.2.0",
        "typescript": "^5.9.3"
    },
    "keywords": [
        "code style",
        "linters",
        "eslint"
    ]
}
